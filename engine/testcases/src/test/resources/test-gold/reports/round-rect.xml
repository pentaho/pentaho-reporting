<report name="font-to-pdf" xmlns="http://jfreereport.sourceforge.net/namespaces/reports/legacy/simple">
  <configuration>
    <property name="org.pentaho.reporting.engine.classic.core.modules.output.pageable.pdf.PDFOutputTarget.default.Encoding">Identity-H</property>
    <property name="org.pentaho.reporting.engine.classic.core.modules.output.pageable.pdf.PDFOutputTarget.default.EmbedFonts">true</property>
  </configuration>
  <reportheader height="12" fontname="Serif" fontsize="10">
    <label height="12" x="0" y="0" width="100%"
      >Some text to make the page-footer appear</label>
  </reportheader>

  <pagefooter height="0">
    <label height="10" width="200" vertical-text-alignment="middle"
        border-bottom-color="black" border-bottom-style="solid" border-bottom-width="1"
        border-top-color="black" border-top-style="solid" border-top-width="1"
        border-left-color="black" border-left-style="solid" border-left-width="1"
        border-right-color="black" border-right-style="solid" border-right-width="1"
        border-top-left-radius-x="5" border-top-left-radius-y="5"
        border-bottom-left-radius-x="5" border-bottom-left-radius-y="5"
        border-top-right-radius-x="5" border-top-right-radius-y="5"
        border-bottom-right-radius-x="5" border-bottom-right-radius-y="5"
        >Some text again</label>
  </pagefooter>

</report>