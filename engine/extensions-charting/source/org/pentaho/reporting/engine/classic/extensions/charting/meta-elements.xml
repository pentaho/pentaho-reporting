<meta-data xmlns="http://reporting.pentaho.org/namespaces/engine/classic/metadata/1.0">

  <include-globals src="res://org/pentaho/reporting/engine/classic/core/metadata/global-meta-elements.xml"/>

  <element name="chart" expert="false" hidden="false" preferred="true"
           bundle-name="org.pentaho.reporting.engine.classic.extensions.charting.ChartElementTypeBundle"
           implementation="org.pentaho.reporting.engine.classic.extensions.charting.ChartElementType"
           content-type="org.pentaho.reporting.engine.classic.core.util.ReportDrawable"
           type-classification="data"
           namespace="http://reporting.pentaho.org/namespaces/engine/classic/charting/1.0">

    <attribute-group-ref ref="common-attributes"/>
    <attribute-group-ref ref="interactivity"/>

    <attribute namespace="http://reporting.pentaho.org/namespaces/engine/classic/charting/1.0"
               name="chart-definition"
               mandatory="true"
               expert="true"
               hidden="false"
               prefer-bulk="true"
               design-time-value="true"
               value-type="java.lang.String"
               value-role="Value"/>


    <style-group-ref ref="borders"/>
    <style-group-ref ref="common"/>
    <style-group-ref ref="replaced-content"/>
    <style-group-ref ref="layout"/>
  </element>
</meta-data>