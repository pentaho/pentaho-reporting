<report pageformat="A4" name="Crash if the font does not exist"
        xmlns="http://jfreereport.sourceforge.net/namespaces/reports/legacy/simple">

  <reportheader fontname="A font that does not exist">
    <rectangle x="0" y="0" width="100%" height="100%" draw="true" fill="false" color="green"/>
    <label x="0" y="0" width="100%" height="12">Some large text (spanning the complete width)</label>
    <label x="0" y="12" width="100" height="12">small Chunk</label>
    <label x="100" y="12" width="100" height="12">small Chunk</label>
    <label x="200" y="12" width="100" height="12">small Chunk</label>
    <label x="300" y="12" width="100" height="12">small Chunk</label>
    <label x="400" y="12" width="100" height="12">small Chunk</label>
  </reportheader>
</report>
