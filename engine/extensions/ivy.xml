<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
	<info organisation="${ivy.artifact.group}" module="${ivy.artifact.id}" revision="${project.revision}"/>

	<configurations>
    <conf name="default_internal"/>
    <conf name="default_external"/>
    <conf name="default" extends="default_internal, default_external"/>
		<conf name="test" visibility="private"/>
		<conf name="source"/>
	</configurations>

	<publications>
		<artifact name="${ivy.artifact.id}" type="jar" conf="default"/>
		<artifact name="${ivy.artifact.id}" m:classifier="sources" type="source" ext="jar" conf="source"/>
	</publications>

	<dependencies defaultconf="default_internal->default">
		<!--  reporting engine dependencies -->
    <dependency org="${ivy.artifact.group}" name="pentaho-reporting-engine-classic-core" rev="${project.revision}" transitive="true"
                changing="true"/>
		<dependency org="${library.group}" name="libsparkline" rev="${dependency.reporting-library.revision}" transitive="true"
                changing="true"/>

    <!--  external dependencies -->
    <dependency org="barbecue" name="barbecue" rev="${barbecue.revision}" transitive="true" conf="default_external->default"/>
    <dependency org="net.sf.barcode4j" name="barcode4j" rev="2.0"  transitive="false" conf="default_external->default"/>
    <!-- Barcode4j depends on avalon configuration classes, but does not document it in its maven file -->
    <dependency org="avalon-framework" name="avalon-framework" rev="4.1.5" transitive="false" conf="default_external->default"/>

    <!--  external dependencies -->
    <dependency org="commons-pool" name="commons-pool" rev="1.3" transitive="false" conf="default_external->default"/>
    <dependency org="commons-dbcp" name="commons-dbcp" rev="1.2.1" transitive="false" conf="default_external->default"/>
    <dependency org="javax.mail" name="mail" rev="1.4.1" transitive="false" conf="default_external->default"/>

    <dependency org="junit" name="junit" rev="4.10" transitive="false" conf="test->default"/>
    <dependency org="hsqldb" name="hsqldb" rev="1.8.0" transitive="false" conf="test->default"/>
    <dependency org="org.slf4j" name="slf4j-api" rev="1.7.3" transitive="false" conf="test->default"/>
    <dependency org="org.slf4j" name="slf4j-api" rev="1.6.4" transitive="false" changing="false" conf="test->default"/>
    <dependency org="${ivy.artifact.group}" name="pentaho-reporting-engine-classic-core-test" rev="${project.revision}" transitive="false" conf="test->default"/>
    <dependency org="pentaho" name="simple-jndi" rev="${dependency.pentaho-simple-jndi.revision}" transitive="false" conf="test->default"/>
    <dependency org="xmlunit" name="xmlunit" rev="1.3" conf="test->default"/>
    <dependency org="org.apache.commons" name="commons-lang3" rev="3.0" transitive="false" conf="test->default"/>
	</dependencies>
</ivy-module>
